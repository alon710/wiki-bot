# Environment
ENV_ID=local

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/wikibot
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Twilio WhatsApp API
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WEBHOOK_VERIFY_TOKEN=optional-verify-token

# OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MAX_TOKENS=150
OPENROUTER_TEMPERATURE=0.7

# Wikipedia
WIKIPEDIA_USER_AGENT=WikiFactsBot/1.0
WIKIPEDIA_TIMEOUT=10

# Scheduler
SCHEDULER_FACT_GENERATION_HOUR=9
SCHEDULER_FACT_GENERATION_MINUTE=0
SCHEDULER_TIMEZONE=UTC

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=80
SERVER_RELOAD=true
SERVER_LOG_LEVEL=info

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json